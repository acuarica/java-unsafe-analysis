<project name="maven-client" default="run" basedir=".">
	<description>maven client</description>
	<property name="src" location="src" />
	<property name="build" location="build" />
	<target name="init">
		<mkdir dir="${build}" />
	</target>
	<target name="compile" depends="init">
		<javac includeantruntime="false" srcdir="${src}" destdir="${build}" classpath="lib/lucene-core-2.4.1.jar:lib/asm-all-5.0.3.jar" />
	</target>
	<target name="run" depends="compile">
		<java classname="ch.usi.inf.sape.unsafe.maven.Main" classpath="${build}:lib/lucene-core-2.4.1.jar:lib/asm-all-5.0.3.jar" fork="true">
			<assertions>
				<enable />
			</assertions>
		</java>
	</target>
	<target name="clean" description="clean up">
		<delete dir="${build}" />
	</target>
	<target name="luke">
		<java jar="tools/lukeall-3.5.0.jar" fork="true">
		</java>
	</target>
</project>
